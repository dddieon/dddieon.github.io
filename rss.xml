&lt;span class=&quot;token keyword&quot;&gt;const&lt;/span&gt; defaultOptions&lt;span class=&quot;token operator&quot;&gt;:&lt;/span&gt; IntersectionObserverInit &lt;span class=&quot;token operator&quot;&gt;=&lt;/span&gt; &lt;span class=&quot;token punctuation&quot;&gt;{&lt;/span&gt;
